<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'OfferLetter', root_path, :class => "navbar-brand"%>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'Learn', '#' %>
        </li>
        <li>
          <%= link_to 'Practice', '#' %>
        </li>
        <li>
          <%= link_to 'About', page_path('about') %>
        </li>
      </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.present? %>
            <li class="<%= 'active' if current_page?('#')%> dropdown">
              <%= link_to (current_user.name.to_s + '<b class="caret"></b>').html_safe, @user, :id => 'setupdrop', :class => "dropdown-toggle nav-link", :data => {:toggle => "dropdown"} %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Profile", '#' %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                <li class="divider"></li>
                <li><%= link_to "Help", '#' %></li>
             </ul>
            </li>
              <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Create Account", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>



