<div class="vertical-center"><h1>Leaderboard</h1></div>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <table class='table table-striped table-bordered table-hover text-center'>
        <thead>
          <tr>
            <th style="text-align:center">Rank</th>
            <th></th>
            <th style="text-align:center">Name</th>
            <th style="text-align:center">Experience Pts</th>
          </tr>
        </thead>
          <tbody>
            <% count = 1 %>
            <% @users.each do |user| %>
            <tr>
                <td><h4><%= count %></h4></td>
                <% count += 1 %>
                <td><%= gravatar_for user %></td>
                <td><h5><%= link_to user.email, user_path(user) %></h5></td>
                <td><h4><%= user.experience %></h4></td>
            </tr>
            <% end %>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
