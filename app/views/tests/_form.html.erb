<%= semantic_form_for @test do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.select :topic, ["Personal Questions", "Technical Questions", "Interview Etiquette"] %>
    <%= f.select :difficulty, ["1", "2", "3", "4", "5"] %>
    <%= f.input :random %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
