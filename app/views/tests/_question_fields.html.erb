<fieldset>
  <%= f.text_area :content, class:"form-control", placeholder:"ask question here" %>
  <%= f.hidden_field :_destroy %>
  <%= f.label :_destroy, "Remove Question", class: "btn btn-warning remove_fields remove-question" %>
  <%= f.fields_for :answers do |builder| %>
          <%= render 'answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :answers %>
</fieldset>
